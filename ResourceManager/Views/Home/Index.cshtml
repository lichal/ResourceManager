
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Resource Manager</title>
    <style>
        span {
            height: 100px;
            width: 100px;
            vertical-align: middle;
            line-height: normal;
            margin-right: 20px;
            margin-left: 20px;
        }
        .resourceStyle{
            text-align:center;
        }
        .procesStyle {
            text-align: center;
        }
        .actionButton {
            margin-top:100px;
            text-align: center;
        }
        .process {
            background-color: #bbb;
            border-radius: 50%;
            display:inline-block;
        }

        .resource {
            border-radius: 0%;
            background-color: #bbb;
            display: inline-block;
            vertical-align:middle;
            margin-bottom:200px;
        }
    </style>

</head>
<body>
    <h1>Welcome to Resource Manager</h1>

    <div>
        <p>Number of processes: @ViewBag.ProcessNumber</p>
        <p>Available resources: @ViewBag.ResourceNumber</p>
    </div>
    <div class="resourceStyle">
        @for (var i = 0; i < @ViewBag.ResourceNumber; i++)
        {
            <span class="resource" id="R@(i)">R@(i)</span>
        }
    </div>

    <div class="procesStyle">
        @for (var i = 0; i < @ViewBag.ProcessNumber; i++)
        {
            <span class="process" id="P@(i)">P@(i)</span>
        }
    </div>

    <div class="actionButton">
        <button id="startBtn" onclick="StartClick()">Start</button>    
    </div>

</body>
</html>
